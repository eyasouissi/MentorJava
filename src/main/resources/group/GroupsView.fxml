<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.input.KeyCombination?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.controllers.group.GroupsController"
      prefWidth="1100" prefHeight="750"
      spacing="20"
      style="-fx-padding: 25; -fx-background-color: #f5f7fa;">

    <!-- Menu Bar -->


    <!-- Header -->
    <HBox fx:id="header" spacing="20" alignment="CENTER_LEFT">
        <Label text="📚 Groups Management"
               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Pane HBox.hgrow="ALWAYS"/>

    </HBox>

    <!-- Navigation Bar -->
    <HBox fx:id="navbar" spacing="20" alignment="CENTER_LEFT" style="-fx-background-color: #7d7598; -fx-padding: 10 20;">
        <Button text="📊 Statistiques" onAction="#showStatsView" styleClass="nav-button" style="-fx-background-color: white; -fx-text-fill: #7d7598; -fx-font-weight: bold; -fx-font-size: 14px;" />
        <Button text="📅 Calendrier" onAction="#showCalendar" styleClass="nav-button" 
        style="-fx-background-color: white; -fx-text-fill: #7d7598; -fx-font-weight: bold; -fx-font-size: 14px;"/>
    </HBox>

    <!-- Toolbar + Search -->
    <HBox fx:id="toolbar" spacing="15" alignment="CENTER_LEFT" style="-fx-padding: 10 0;">
        <Button fx:id="addGroupButton" text="➕ Add Group" onAction="#showAddGroupView"
                style="-fx-background-color: #ba9cf4; -fx-text-fill: white; -fx-font-weight: bold; -fx-min-width: 130; -fx-opacity: 1.0; -fx-visibility: visible;"/>
        <Button text="🔄 Refresh List" onAction="#refreshGroupsList"
                style="-fx-background-color: #a287d6; -fx-text-fill: white; -fx-font-weight: bold; -fx-min-width: 130;"/>
        <Button text="📂 View Projects" onAction="#navigateToProjectsView"
                style="-fx-background-color: #607D8B; -fx-text-fill: white; -fx-font-weight: bold; -fx-min-width: 130;"/>

        <Pane HBox.hgrow="ALWAYS"/>
        
        <TextField fx:id="searchField" promptText="Search by name..."
                   style="-fx-pref-width: 250; -fx-background-radius: 5; -fx-border-radius: 5;"/>
        <Button text="🔍 Search" onAction="#searchGroups"
                style="-fx-background-color: #ba9cf4; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Label text="Filter by Meeting Date:" />
                <DatePicker fx:id="meetingDateFilter" onAction="#filterByMeetingDate"/>
                <Button text="Clear" onAction="#clearDateFilter"/>
    </HBox>

    <!-- Groups Table -->
    <TableView fx:id="groupsTable" VBox.vgrow="ALWAYS"
               style="-fx-background-color: white; -fx-text-fill: black; -fx-table-cell-border-color: #d1d1d1;">
        <columns>
            <TableColumn fx:id="nameColumn" text="📛 Group Name" prefWidth="220"/>
            <TableColumn fx:id="descriptionColumn" text="📝 Description" prefWidth="320"/>
            <TableColumn fx:id="creationDateColumn" text="📅 Creation Date" prefWidth="170"/>
            <TableColumn fx:id="meetingDateColumn" text="🗓️ Next Meeting" prefWidth="170"/>
        </columns>
    </TableView>

    <!-- Action Buttons (Edit / Delete / Details) -->
    <HBox fx:id="actionButtonsBox" spacing="15" style="-fx-padding: 15 0 0 0;" visible="false" alignment="CENTER_LEFT">
        <Button text="✏️ Edit" onAction="#showEditGroupView"
                style="-fx-background-color: #a287d6; -fx-text-fill: white; -fx-font-weight: bold; -fx-min-width: 90;"/>
        <Button text="🗑️ Delete" onAction="#deleteGroup"
                style="-fx-background-color: #ba9cf4; -fx-text-fill: white; -fx-font-weight: bold; -fx-min-width: 90;"/>
        <Button text="ℹ️ Details" onAction="#showGroupDetails"
                style="-fx-background-color: #607D8B; -fx-text-fill: white; -fx-font-weight: bold; -fx-min-width: 90;"/>
    </HBox>
    <!-- Pagination -->
<Pagination fx:id="pagination" 
            style="-fx-page-information-visible: false;"
            VBox.vgrow="NEVER"/>
</VBox>
