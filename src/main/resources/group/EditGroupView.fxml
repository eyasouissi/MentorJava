<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.image.Image?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.controllers.project.EditProjectController"
      spacing="20"
      style="-fx-padding: 20; -fx-background-color: #f5f7fa;"
      prefWidth="600">

    <!-- Header -->
    <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-background-color: #336699; -fx-padding: 10;">
        <Button text="Projects" onAction="#goToProjectsView" style="-fx-background-color: white;"/>
    </HBox>

    <!-- Image Preview -->
    <VBox alignment="CENTER" spacing="10">
        <Circle fx:id="imageCircle" radius="60" fill="lightgray"
                style="-fx-stroke: gray; -fx-stroke-width: 1;" />
        <HBox spacing="10" alignment="CENTER">
            <TextField fx:id="imagePathField" editable="false" HBox.hgrow="ALWAYS"/>
            <Button fx:id="browseImageButton" text="Parcourir" onAction="#handleBrowseImage"/>
        </HBox>
    </VBox>

    <!-- Title -->
    <Label text="Modifier le Projet"
           style="-fx-font-size: 22px; -fx-font-weight: bold;"
           alignment="CENTER"/>

    <!-- Formulaire -->
    <GridPane hgap="10" vgap="12">
        <!-- Nom -->
        <Label text="Nom du projet*:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <!-- Description -->
        <Label text="Description*:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextArea fx:id="descriptionField" prefRowCount="3" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <!-- Date Limite -->
        <Label text="Date Limite:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <DatePicker fx:id="deadlineDatePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <!-- Fichier PDF -->
        <Label text="Fichier PDF:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <HBox spacing="5" GridPane.rowIndex="3" GridPane.columnIndex="1">
            <TextField fx:id="pdfPathField" editable="false" HBox.hgrow="ALWAYS"/>
            <Button fx:id="browsePdfButton" text="Parcourir" onAction="#handleBrowsePdf"/>
        </HBox>

        <!-- Projets -->
        <Label text="Sélectionner les groupes:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <ListView fx:id="groupListView" prefHeight="120" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
    </GridPane>

    <!-- Boutons -->
    <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
        <Button fx:id="updateButton" text="Mettre à jour" onAction="#handleUpdate"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-min-width: 100;"/>
        <Button text="Annuler" onAction="#cancel"
                style="-fx-background-color: #F44336; -fx-text-fill: white; -fx-min-width: 100;"/>
    </HBox>
</VBox>
