<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.LineChart?>

<VBox xmlns="http://javafx.com/javafx/17" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.controllers.project.StatsController"
      spacing="20" 
      style="-fx-padding: 20;">
    
    <BarChart fx:id="difficultyBarChart" title="Projets par difficulté">
        <xAxis>
            <CategoryAxis label="Niveau de difficulté" />
        </xAxis>
        <yAxis>
            <NumberAxis label="Nombre de projets" />
        </yAxis>
    </BarChart>
    
    <LineChart fx:id="creationDateLineChart" title="Projets par date de création">
        <xAxis>
            <CategoryAxis label="Date de création" />
        </xAxis>
        <yAxis>
            <NumberAxis label="Nombre de projets" />
        </yAxis>
    </LineChart>
</VBox>