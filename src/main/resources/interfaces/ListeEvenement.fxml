<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.controllers.ListeEvenementController"
            prefWidth="800" prefHeight="600">

    <children>
        <!-- HBox to place sidebar and main content side by side -->
        <HBox AnchorPane.topAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
              prefHeight="Infinity" prefWidth="Infinity">



            <!-- Main content area -->
            <VBox spacing="15" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
                <padding>
                    <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
                </padding>

                <!-- Header -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button text="Add event" onAction="#ajouterEvenement" style="-fx-background-color: #ba9cf4; -fx-text-fill: white; -fx-font-weight: bold; -fx-min-width: 130; -fx-opacity: 1.0; -fx-visibility: visible;" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Label text="Events List" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                </HBox>

                <!-- Filters -->
                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="30" />
                        <ColumnConstraints percentWidth="30" />
                        <ColumnConstraints percentWidth="30" />
                        <ColumnConstraints percentWidth="10" />
                    </columnConstraints>

                    <!-- Search -->
                    <HBox spacing="5" alignment="CENTER_LEFT" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label text="Recherche:" />
                        <TextField fx:id="searchField" promptText="Search..." HBox.hgrow="ALWAYS" />
                    </HBox>

                    <!-- Sort -->
                    <HBox spacing="5" alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label text="Ordered By:" />
                        <ComboBox fx:id="sortComboBox" prefWidth="150" />
                    </HBox>

                    <!-- Date filter -->
                    <HBox spacing="10" alignment="CENTER_LEFT" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2">
                        <Label text="Filter By:" />
                        <DatePicker fx:id="dateDebutFilter" promptText="Beginning Date" />
                        <Label text="et" />
                        <DatePicker fx:id="dateFinFilter" promptText="Ending Date" />
                    </HBox>

                    <!-- Clear filters -->
                    <Button fx:id="clearFiltersButton" text="Delete Filters"
                            GridPane.columnIndex="2" GridPane.rowIndex="1" style="-fx-background-color: #ba9cf4; -fx-text-fill: white; -fx-font-weight: bold; -fx-min-width: 130; -fx-opacity: 1.0; -fx-visibility: visible;" />
                </GridPane>

                <!-- Pagination -->
                <Pagination fx:id="pagination" VBox.vgrow="ALWAYS" styleClass="event-pagination" />

                <!-- Navigation -->
                <HBox alignment="CENTER" spacing="10">
                    <Button text="⬆️ Previous Page" onAction="#goToPreviousPage" styleClass="nav-button" />
                    <Button text="⬇️ Next Page" onAction="#goToNextPage" styleClass="nav-button" />
                    <Button text="Show Dashboard" onAction="#showDashboard" style="-fx-background-color: #7986cb; -fx-text-fill: white;" />
                </HBox>
            </VBox>
        </HBox>
    </children>
</AnchorPane>
