<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.Admin.AdminDashboardController"
            style="-fx-background-color: #f5f5f5;">

    <!-- Left Sidebar -->
    <left>
        <VBox fx:id="sidebarContainer" style="-fx-background-color: #2c3e50; -fx-min-width: 250;">
            <!-- Sidebar will be loaded here programmatically -->
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: white; -fx-padding: 20;">
            <!-- Default content will be loaded here -->
            <Label text="Welcome to Admin Dashboard"
                   style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
        </StackPane>
    </center>
</BorderPane>