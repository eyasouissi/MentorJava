<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<AnchorPane prefHeight="600" prefWidth="800" style="-fx-background-color: #fafafa;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.user.ProfileController">

    <!-- Main content without ScrollPane -->
    <VBox spacing="0" style="-fx-background-color: #fafafa;" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">

        <!-- Top Background Image (Facebook-style cover photo) -->
        <ImageView fx:id="backgroundImageView" fitHeight="200" fitWidth="800" opacity="0.9" preserveRatio="false">
            <image>
                <Image url="@/assets/images/bg/default-bg.jpg" />
            </image>
            <effect>
                <DropShadow blurType="GAUSSIAN" color="rgba(106,48,147,0.3)" radius="10" />
            </effect>
        </ImageView>

        <!-- Profile Header with Picture overlapping the background image -->
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 0 0 0 20; -fx-translate-y: -75;">
            <!-- Profile Picture (round) overlapping the background -->
            <StackPane>
                <ImageView fx:id="profileImageView" fitHeight="150" fitWidth="150" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 2); -fx-border-color: white; -fx-border-width: 4;" />
                <Circle fill="transparent" radius="75" stroke="#b399d4" strokeWidth="3" />
            </StackPane>

            <!-- Name and Edit Button - Vertical layout -->
            <VBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 75 0 0 0;">
                <Label fx:id="nameLabel" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #6a3093;" />
                <HBox spacing="10">
                    <Button fx:id="editButton" style="-fx-background-color: #6947ff; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 5 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);" text="Edit" />
                    <Button fx:id="logoutButton" style="-fx-background-color: #ff4757; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 5 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);" text="Logout" onAction="#handleLogout" />
                </HBox>
            </VBox>
        </HBox>

        <!-- Profile Information -->
        <VBox fx:id="profileInfoBox" prefWidth="700" spacing="20" style="-fx-padding: 30; -fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(106,48,147,0.1), 15, 0, 0, 5); -fx-margin: -50 20 0 20;">

            <!-- Basic Info Row -->
            <HBox alignment="CENTER_LEFT" spacing="40">
                <VBox spacing="5">
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #6a3093;" text="Age:" />
                    <Label fx:id="ageLabel" style="-fx-font-size: 16px; -fx-text-fill: #555;" />
                </VBox>

                <VBox spacing="5">
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #6a3093;" text="Country:" />
                    <Label fx:id="countryLabel" style="-fx-font-size: 16px; -fx-text-fill: #555;" />
                </VBox>

                <VBox spacing="5">
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #6a3093;" text="Speciality:" />
                    <Label fx:id="specialityLabel" style="-fx-font-size: 16px; -fx-text-fill: #555;" />
                </VBox>
            </HBox>

            <!-- Bio Section -->
            <VBox spacing="5">
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #6a3093;" text="Bio:" />
                <Label fx:id="bioLabel" maxWidth="700" style="-fx-font-size: 16px; -fx-wrap-text: true; -fx-text-fill: #555; -fx-padding: 10; -fx-background-color: #f5f0fa; -fx-background-radius: 5;" />
            </VBox>

            <!-- Diploma Section - Clickable PDF Link -->
            <VBox spacing="5">
                <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #6a3093;" text="Diploma:" />
                <Hyperlink fx:id="diplomaLink" onAction="#openDiplomaPDF" style="-fx-font-size: 16px; -fx-text-fill: #555; -fx-padding: 10; -fx-background-color: #f5f0fa; -fx-background-radius: 5; -fx-border-color: transparent;">
                    <graphic>
                        <HBox alignment="CENTER_LEFT" spacing="5">
                            <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                                <image>
                                    <Image url="@/assets/icons/pdf-icon.png" />
                                </image>
                            </ImageView>
                            <Label fx:id="diplomaLabel" />
                        </HBox>
                    </graphic>
                </Hyperlink>
            </VBox>
        </VBox>

        <!-- Bottom padding -->
        <Region prefHeight="20" />
    </VBox>
</AnchorPane>