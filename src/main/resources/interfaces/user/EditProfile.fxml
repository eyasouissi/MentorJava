<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.controllers.user.EditProfileController">
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED"
                style="-fx-background: #fafafa;" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <VBox spacing="20" style="-fx-padding: 20; -fx-background-color: #fafafa;" minWidth="800">
            <!-- Header -->
            <Label text="Edit Profile" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #6a3093;" />

            <!-- In the Profile Picture Section -->
            <HBox spacing="20" alignment="CENTER_LEFT">
                <StackPane>
                    <ImageView fx:id="profileImageView" fitHeight="100" fitWidth="100" preserveRatio="true">
                        <clip>
                            <Circle radius="50" centerX="50" centerY="50"/>
                        </clip>
                    </ImageView>
                    <Circle radius="50" centerX="50" centerY="50" fill="transparent" stroke="#b399d4" strokeWidth="2"/>
                </StackPane>
                <Button text="Change" onAction="#handleChangeProfilePicture"
                        style="-fx-background-color: #b399d4; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-pref-width: 100; -fx-pref-height: 35; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 1);"/>
                <Button text="Generate PFP" onAction="#handleGenerateProfilePicture"
                        style="-fx-background-color: #6a3093; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-pref-width: 120; -fx-pref-height: 35; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 1);"/>
            </HBox>

            <!-- Background Image Section -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <Label text="Background Image" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                <HBox spacing="20" alignment="CENTER_LEFT">
                    <ImageView fx:id="backgroundImageView" fitHeight="100" fitWidth="200" preserveRatio="false" style="-fx-background-radius: 5; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 1);"/>
                    <Button text="Change" onAction="#handleChangeBackgroundImage"
                            style="-fx-background-color: #b399d4; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-pref-width: 100; -fx-pref-height: 35; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 1);"/>
                </HBox>
            </VBox>

            <!-- Personal Info Section -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <Label text="Personal Information" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                <GridPane hgap="10" vgap="10" prefWidth="760">
                    <Label text="Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-text-fill: #555;"/>
                    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="300" style="-fx-background-radius: 5; -fx-border-color: #b399d4; -fx-border-radius: 5;"/>

                    <Label text="Age:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-text-fill: #555;"/>
                    <TextField fx:id="ageField" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-background-radius: 5; -fx-border-color: #b399d4; -fx-border-radius: 5;"/>

                    <Label text="Country:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-text-fill: #555;"/>
                    <TextField fx:id="countryField" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-background-radius: 5; -fx-border-color: #b399d4; -fx-border-radius: 5;"/>

                    <Label text="Speciality:" GridPane.columnIndex="0" GridPane.rowIndex="3" style="-fx-text-fill: #555;"/>
                    <TextField fx:id="specialityField" GridPane.columnIndex="1" GridPane.rowIndex="3" style="-fx-background-radius: 5; -fx-border-color: #b399d4; -fx-border-radius: 5;"/>
                </GridPane>
            </VBox>

            <!-- Bio Section -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <Label text="Bio" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                <TextArea fx:id="bioArea" wrapText="true" prefRowCount="4" prefWidth="760"
                          style="-fx-background-radius: 5; -fx-border-color: #b399d4; -fx-border-radius: 5;"/>
            </VBox>

            <!-- Diploma Section -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <Label text="Diploma (PDF)" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                <HBox spacing="20" alignment="CENTER_LEFT">
                    <Label fx:id="diplomaFileNameLabel" text="No file selected" style="-fx-text-fill: #555;"/>
                    <Button text="Upload Diploma" onAction="#handleUploadDiploma"
                            style="-fx-background-color: #b399d4; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-pref-width: 120; -fx-pref-height: 35; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 1);"/>
                </HBox>
            </VBox>

            <!-- Action Buttons -->
            <HBox spacing="20" alignment="CENTER" style="-fx-padding: 10 0 20 0;">
                <Button text="Save" onAction="#handleSave"
                        style="-fx-background-color: #b399d4; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-pref-width: 120; -fx-pref-height: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);"/>
                <Button text="Cancel" onAction="#handleCancel"
                        style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-pref-width: 120; -fx-pref-height: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);"/>
            </HBox>
        </VBox>
    </ScrollPane>
</AnchorPane>