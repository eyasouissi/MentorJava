<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.controllers.auth.MainController"
            style="-fx-background-color: #f5f5f5;">

    <!-- Top Bar with Profile Button -->
    <top>
        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 15; -fx-background-color: white;">
            <Label fx:id="welcomeLabel" style="-fx-font-size: 18px; -fx-text-fill: #666;" />
            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>

    <!-- Left Sidebar -->
    <left>
        <VBox fx:id="sidebarContainer" style="-fx-background-color: transparent;">
            <!-- Sidebar will be loaded here programmatically -->
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: white; -fx-padding: 20;">
            <VBox alignment="CENTER" spacing="20">
                <Text text="Welcome to Main Page!"
                      style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-fill: #333;" />
            </VBox>
        </StackPane>
    </center>
</BorderPane>