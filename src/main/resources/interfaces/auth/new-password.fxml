<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="newPassPage" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="400.0" prefWidth="350.0" spacing="20.0" style="-fx-background-color: white;"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.controllers.auth.NewPasswordController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Set New Password" textFill="#6433b9">
        <font>
            <Font name="Arial" size="24.0" />
        </font>
    </Label>

    <VBox spacing="10.0">
        <Label text="New Password:" textFill="#393939">
            <font>
                <Font name="Arial Bold" size="14.0" />
            </font>
        </Label>
        <PasswordField fx:id="newPasswordField" prefHeight="35.0" prefWidth="300.0"
                       style="-fx-background-color: white; -fx-border-color: #865fc8; -fx-border-width: 0px 0px 2px 0px;" />
    </VBox>

    <VBox spacing="10.0">
        <Label text="Confirm Password:" textFill="#393939">
            <font>
                <Font name="Arial Bold" size="14.0" />
            </font>
        </Label>
        <PasswordField fx:id="confirmPasswordField" prefHeight="35.0" prefWidth="300.0"
                       style="-fx-background-color: white; -fx-border-color: #865fc8; -fx-border-width: 0px 0px 2px 0px;" />
    </VBox>

    <Label fx:id="errorLabel" prefHeight="18.0" prefWidth="300.0">
        <font>
            <Font size="12.0" />
        </font>
    </Label>

    <Button fx:id="resetBtn" mnemonicParsing="false" onAction="#handleResetPassword"
            prefHeight="35.0" prefWidth="300.0" style="-fx-background-color: #865fc8;"
            text="Reset Password" textFill="WHITE">
        <font>
            <Font size="14.0" />
        </font>
    </Button>
</VBox>