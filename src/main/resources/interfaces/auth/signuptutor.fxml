<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.effect.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.shape.Circle?>

<HBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.controllers.auth.SignUpTutor"
      style="-fx-background-color: #f5f5f5;"
      minHeight="600" minWidth="800">

    <!-- Left Pane (Welcome Section) - 50% -->
    <AnchorPane style="-fx-background-color: linear-gradient(to bottom right, #c78ad4, #b970d1);"
                HBox.hgrow="ALWAYS">
        <fx:include source="LeftPane.fxml"/>
    </AnchorPane>

    <!-- Right Pane (Form) - 50% -->
    <AnchorPane style="-fx-background-color: #f5f5f5;" HBox.hgrow="ALWAYS">
        <StackPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                   AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <VBox alignment="CENTER" spacing="15" maxWidth="400"
                  style="-fx-padding: 30; -fx-background-color: white; -fx-background-radius: 15;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.2, 0, 4);">

                <!-- Title -->
                <Text text="Tutor Registration"
                      style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-fill: #5d236a;" />

                <!-- Form Fields -->
                <VBox spacing="5" maxWidth="300">
                    <Label text="Full Name" style="-fx-font-size: 14px; -fx-text-fill: #666;" />
                    <TextField fx:id="nameField" promptText="Full Name"
                               style="-fx-pref-width: 300px; -fx-pref-height: 40px; -fx-font-size: 14px;
                                      -fx-background-radius: 10px; -fx-border-radius: 10px; -fx-border-color: #EEA0FF;"/>
                </VBox>

                <VBox spacing="5" maxWidth="300">
                    <Label text="Email" style="-fx-font-size: 14px; -fx-text-fill: #666;" />
                    <TextField fx:id="emailField" promptText="Email"
                               style="-fx-pref-width: 300px; -fx-pref-height: 40px; -fx-font-size: 14px;
                                      -fx-background-radius: 10px; -fx-border-radius: 10px; -fx-border-color: #EEA0FF;"/>
                </VBox>

                <VBox spacing="5" maxWidth="300">
                    <Label text="Password" style="-fx-font-size: 14px; -fx-text-fill: #666;" />
                    <PasswordField fx:id="passwordField" promptText="Password"
                                   style="-fx-pref-width: 300px; -fx-pref-height: 40px; -fx-font-size: 14px;
                                          -fx-background-radius: 10px; -fx-border-radius: 10px; -fx-border-color: #EEA0FF;"/>
                </VBox>

                <VBox spacing="5" maxWidth="300">
                    <Label text="Confirm Password" style="-fx-font-size: 14px; -fx-text-fill: #666;" />
                    <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password"
                                   style="-fx-pref-width: 300px; -fx-pref-height: 40px; -fx-font-size: 14px;
                                          -fx-background-radius: 10px; -fx-border-radius: 10px; -fx-border-color: #EEA0FF;"/>
                </VBox>

                <!-- Gender Selection -->
                <VBox spacing="5" maxWidth="300">
                    <Label text="Gender:" style="-fx-font-size: 14px; -fx-text-fill: #666;" />
                    <HBox alignment="CENTER_LEFT" spacing="20">
                        <HBox spacing="5">
                            <RadioButton fx:id="maleRadio" toggleGroup="$genderGroup"/>
                            <Label text="Male" style="-fx-font-size: 14px; -fx-text-fill: #666;" />
                        </HBox>
                        <HBox spacing="5">
                            <RadioButton fx:id="femaleRadio" toggleGroup="$genderGroup"/>
                            <Label text="Female" style="-fx-font-size: 14px; -fx-text-fill: #666;" />
                        </HBox>
                    </HBox>
                </VBox>

                <!-- Age Input -->
                <VBox spacing="5" maxWidth="300">
                    <Label text="Age" style="-fx-font-size: 14px; -fx-text-fill: #666;" />
                    <TextField fx:id="ageField" promptText="Age"
                               style="-fx-pref-width: 300px; -fx-pref-height: 40px; -fx-font-size: 14px;
                                      -fx-background-radius: 10px; -fx-border-radius: 10px; -fx-border-color: #EEA0FF;"/>
                </VBox>

                <!-- Country Selection -->
                <VBox spacing="5" maxWidth="300">
                    <Label text="Country:" style="-fx-font-size: 14px; -fx-text-fill: #666;" />
                    <ComboBox fx:id="countryComboBox" promptText="Select your country"
                              style="-fx-pref-width: 300px; -fx-pref-height: 40px; -fx-font-size: 14px;
                                     -fx-background-radius: 10px; -fx-border-radius: 10px; -fx-border-color: #EEA0FF;" />
                </VBox>

                <!-- Speciality Input -->
                <VBox spacing="5" maxWidth="300">
                    <Label text="Speciality" style="-fx-font-size: 14px; -fx-text-fill: #666;" />
                    <TextField fx:id="specialityField" promptText="Speciality"
                               style="-fx-pref-width: 300px; -fx-pref-height: 40px; -fx-font-size: 14px;
                                      -fx-background-radius: 10px; -fx-border-radius: 10px; -fx-border-color: #EEA0FF;"/>
                </VBox>

                <!-- Diploma Section -->
                <VBox spacing="5" maxWidth="300">
                    <Label text="Diploma (PDF):" style="-fx-font-size: 14px; -fx-text-fill: #666;" />
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label fx:id="diplomaFileNameLabel" text="No file selected" style="-fx-text-fill: #555;"/>
                        <Button text="Upload" onAction="#handleUploadDiploma"
                                style="-fx-background-color: #47AEFF; -fx-text-fill: white; -fx-font-weight: bold;
                                       -fx-background-radius: 20; -fx-pref-width: 100; -fx-pref-height: 35;"/>
                    </HBox>
                </VBox>

                <!-- Error Message -->
                <Label fx:id="errorLabel" style="-fx-text-fill: red; -fx-font-size: 14px; -fx-padding: 5px 0;" />

                <!-- Sign Up Button -->
                <Button text="Sign Up" defaultButton="true" onAction="#handleSignUp"
                        style="-fx-pref-width: 300px; -fx-pref-height: 40px;
                               -fx-background-color: #47AEFF; -fx-text-fill: white;
                               -fx-font-weight: bold; -fx-font-size: 15px;
                               -fx-background-radius: 20px; -fx-cursor: hand;" />

                <!-- Login Link -->
                <HBox alignment="CENTER" spacing="5" style="-fx-padding: 10px 0;">
                    <Label text="Already have an account?" style="-fx-font-size: 14px; -fx-text-fill: #666;" />
                    <Hyperlink text="Login" onAction="#handleLoginRedirect"
                               style="-fx-text-fill: #47AEFF; -fx-font-size: 14px;" />
                </HBox>

            </VBox>
        </StackPane>
    </AnchorPane>
</HBox>