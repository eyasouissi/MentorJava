<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.effect.*?>
<?import javafx.geometry.*?>

<?import javafx.scene.shape.Circle?>
<HBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.controllers.auth.RoleChoiceController" prefHeight="600" prefWidth="1000">

    <!-- Left Pane (Welcome Section) - 50% width -->
    <AnchorPane style="-fx-background-color: linear-gradient(
            to bottom right,
            #ffffff 0%,    /* Top-left corner: white */
            #8c84a1 30%,   /* Soft purple appears */
            #6f6280 50%,   /* Darker center */
            #8c84a1 70%,   /* Lightens again */
            #ffffff 100%   /* Bottom-right corner: white */
    );"
                HBox.hgrow="ALWAYS" prefWidth="500">
        <VBox alignment="CENTER" spacing="30"
              AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="50"
              AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50">

            <ImageView fitWidth="150" fitHeight="150" preserveRatio="true">
                <Image url="@/assets/icons/mentor-logo.png"/>
            </ImageView>

            <VBox alignment="CENTER" spacing="10">
                <Text text="Welcome to"
                      style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-fill: white;"/>
                <Text text="MENTOR"
                      style="-fx-font-size: 48px; -fx-font-weight: bold; -fx-fill: white;">
                    <effect>
                        <Glow level="0.8"/>
                    </effect>
                </Text>
            </VBox>

            <Text text="Your learning journey starts here"
                  style="-fx-font-size: 18px; -fx-font-style: italic; -fx-fill: white;"/>

            <HBox alignment="CENTER" spacing="20">
                <Circle radius="8" fill="#EEA0FF" opacity="0.7"/>
                <Circle radius="12" fill="#eae7ef" opacity="0.7"/>
                <Circle radius="8" fill="#EEA0FF" opacity="0.7"/>
            </HBox>

            <Text text='"Education is the most powerful weapon which you can use to change the world."'
                  style="-fx-font-size: 14px; -fx-text-alignment: center; -fx-fill: white;"/>
        </VBox>
    </AnchorPane>

    <!-- Right Pane (Role Choice) -->
    <AnchorPane style="-fx-background-color: #f5f5f5;" minWidth="400" prefWidth="400" maxWidth="400">
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;"
                    AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                    AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <VBox alignment="CENTER" spacing="30" style="-fx-padding: 40;">
                <Text text="Select Your Role"
                      style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-fill: #5d236a;" />

                <HBox alignment="CENTER" spacing="30">
                    <Button fx:id="studentButton" text="Student"
                            onAction="#handleStudentChoice"
                            onMouseEntered="#hoverStudent"
                            onMouseExited="#resetStudent"
                            style="-fx-pref-width: 180px; -fx-pref-height: 60px;
                                   -fx-background-color: white; -fx-text-fill: #5d236a;
                                   -fx-font-weight: bold; -fx-font-size: 16px;
                                   -fx-background-radius: 30px; -fx-border-color: #eae7ef;
                                   -fx-border-width: 2px; -fx-border-radius: 30px;
                                   -fx-cursor: hand;" />

                    <Button fx:id="tutorButton" text="Tutor"
                            onAction="#handleTutorChoice"
                            onMouseEntered="#hoverTutor"
                            onMouseExited="#resetTutor"
                            style="-fx-pref-width: 180px; -fx-pref-height: 60px;
                                   -fx-background-color: white; -fx-text-fill: #5d236a;
                                   -fx-font-weight: bold; -fx-font-size: 16px;
                                   -fx-background-radius: 30px; -fx-border-color: #eae7ef;
                                   -fx-border-width: 2px; -fx-border-radius: 30px;
                                   -fx-cursor: hand;" />
                </HBox>

                <HBox alignment="CENTER" spacing="5">
                    <Label text="Already have an account?" style="-fx-font-size: 14px; -fx-text-fill: #70a2e1;" />
                    <Hyperlink text="Login"
                               onAction="#handleLoginRedirect"
                               style="-fx-text-fill: #70a2e1; -fx-font-size: 14px;" />
                </HBox>
            </VBox>
        </ScrollPane>
    </AnchorPane>
</HBox>