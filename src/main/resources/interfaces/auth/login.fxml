<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.effect.*?>
<?import javafx.geometry.*?>

<?import javafx.scene.shape.Circle?>
<HBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.controllers.auth.Login" prefHeight="600" prefWidth="1000">

    <!-- Left Pane (Welcome Section) - 50% width -->
    <AnchorPane style="-fx-background-color: linear-gradient(
            to bottom right,
            #ffffff 0%,    /* Top-left corner: white */
            #8c84a1 30%,   /* Soft purple appears */
            #6f6280 50%,   /* Darker center */
            #8c84a1 70%,   /* Lightens again */
            #ffffff 100%   /* Bottom-right corner: white */
    );"
                HBox.hgrow="ALWAYS" prefWidth="500">
        <VBox alignment="CENTER" spacing="30"
              AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="50"
              AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50">

            <ImageView fitWidth="150" fitHeight="150" preserveRatio="true">
                <Image url="@/assets/icons/mentor-logo.png"/>
            </ImageView>

            <VBox alignment="CENTER" spacing="10">
                <Text text="Welcome to"
                      style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-fill: white;"/>
                <Text text="MENTOR"
                      style="-fx-font-size: 48px; -fx-font-weight: bold; -fx-fill: white;">
                    <effect>
                        <Glow level="0.8"/>
                    </effect>
                </Text>
            </VBox>

            <Text text="Your learning journey starts here"
                  style="-fx-font-size: 18px; -fx-font-style: italic; -fx-fill: white;"/>

            <HBox alignment="CENTER" spacing="20">
                <Circle radius="8" fill="#EEA0FF" opacity="0.7"/>
                <Circle radius="12" fill="#eae7ef" opacity="0.7"/>
                <Circle radius="8" fill="#EEA0FF" opacity="0.7"/>
            </HBox>

            <Text text='"Education is the most powerful weapon which you can use to change the world."'
                  style="-fx-font-size: 14px; -fx-text-alignment: center; -fx-fill: white;"/>
        </VBox>
    </AnchorPane>

    <!-- Right Pane (Login Form) - 50% width with centered content -->
    <AnchorPane style="-fx-background-color: #f5f5f5;" HBox.hgrow="ALWAYS" prefWidth="500">
        <StackPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                   AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <VBox alignment="CENTER" spacing="20"
                  style="-fx-background-color: white; -fx-padding: 30px; -fx-background-radius: 15px;
                        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.2, 0, 4);
                        -fx-max-width: 400px;">

                <Text text="Login" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-fill: #8c84a1;"/>

                <VBox alignment="CENTER" spacing="10">
                    <Label text="Encourage Brainy to continue:" style="-fx-font-size: 14px;"/>
                    <ImageView fx:id="richardImage" fitWidth="100" fitHeight="100" preserveRatio="true"/>
                    <TextField fx:id="complimentField" promptText="Say something nice to Brainy..."
                               style="-fx-pref-width: 300px; -fx-pref-height: 40px; -fx-font-size: 14px;
                                    -fx-background-radius: 10px; -fx-border-radius: 10px;
                                    -fx-border-color: #EEA0FF; -fx-border-width: 1.5px;"/>
                </VBox>

                <TextField fx:id="emailField" promptText="Email"
                           style="-fx-pref-width: 300px; -fx-pref-height: 40px; -fx-font-size: 14px;
                                  -fx-background-radius: 10px; -fx-border-radius: 10px;
                                  -fx-border-color: #EEA0FF; -fx-border-width: 1.5px;"/>

                <VBox fx:id="passwordBox" alignment="CENTER" spacing="10">
                    <PasswordField fx:id="passwordField" promptText="Password"
                                   style="-fx-pref-width: 300px; -fx-pref-height: 40px; -fx-font-size: 14px;
                                          -fx-background-radius: 10px; -fx-border-radius: 10px;
                                          -fx-border-color: #EEA0FF; -fx-border-width: 1.5px;"/>
                </VBox>

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <CheckBox fx:id="rememberMeCheckbox" text="Remember me"
                              style="-fx-font-size: 14px;"/>
                    <Hyperlink text="Forgot password?" onAction="#handleForgotPassword"
                               style="-fx-text-fill: #47AEFF; -fx-font-size: 14px;"/>
                </HBox>

                <Label fx:id="errorLabel" style="-fx-text-fill: red; -fx-font-size: 14px;"/>

                <Button text="Login" onAction="#handleLogin" defaultButton="true"
                        style="-fx-pref-width: 300px; -fx-pref-height: 40px;
                               -fx-background-color: #8c84a1; -fx-text-fill: white;
                               -fx-font-weight: bold; -fx-font-size: 15px;
                               -fx-background-radius: 20px; -fx-cursor: hand;"/>

                <Button fx:id="faceLoginButton" text="Login via Face" onAction="#handleFaceLogin"
                        style="-fx-pref-width: 300px; -fx-pref-height: 40px;
                               -fx-background-color: #7d7598; -fx-text-fill: white;
                               -fx-font-weight: bold; -fx-font-size: 15px;
                               -fx-background-radius: 20px; -fx-cursor: hand;"/>

                <HBox alignment="CENTER" spacing="5">
                    <Label text="Don't have an account?" style="-fx-font-size: 14px;"/>
                    <Hyperlink text="Sign up" onAction="#handleSignUpRedirect"
                               style="-fx-text-fill: #47AEFF; -fx-font-size: 14px;"/>
                </HBox>
            </VBox>
        </StackPane>
    </AnchorPane>
</HBox>