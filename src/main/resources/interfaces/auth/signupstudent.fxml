<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.effect.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.shape.Circle?>

<HBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.controllers.auth.SignUpStudent"
      style="-fx-background-color: #f5f5f5;"
      minHeight="600" minWidth="800">

    <!-- Left Pane (Welcome Section) - 50% width -->
    <AnchorPane style="-fx-background-color: linear-gradient(
            to bottom right,
            #ffffff 0%,    /* Top-left corner: white */
            #8c84a1 30%,   /* Soft purple appears */
            #6f6280 50%,   /* Darker center */
            #8c84a1 70%,   /* Lightens again */
            #ffffff 100%   /* Bottom-right corner: white */
    );"
                HBox.hgrow="ALWAYS" prefWidth="500">
        <VBox alignment="CENTER" spacing="30"
              AnchorPane.topAnchor="50" AnchorPane.bottomAnchor="50"
              AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50">

            <ImageView fitWidth="150" fitHeight="150" preserveRatio="true">
                <Image url="@/assets/icons/mentor-logo.png"/>
            </ImageView>

            <VBox alignment="CENTER" spacing="10">
                <Text text="Welcome to"
                      style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-fill: white;"/>
                <Text text="MENTOR"
                      style="-fx-font-size: 48px; -fx-font-weight: bold; -fx-fill: white;">
                    <effect>
                        <Glow level="0.8"/>
                    </effect>
                </Text>
            </VBox>

            <Text text="Your learning journey starts here"
                  style="-fx-font-size: 18px; -fx-font-style: italic; -fx-fill: white;"/>

            <HBox alignment="CENTER" spacing="20">
                <Circle radius="8" fill="#EEA0FF" opacity="0.7"/>
                <Circle radius="12" fill="#eae7ef" opacity="0.7"/>
                <Circle radius="8" fill="#EEA0FF" opacity="0.7"/>
            </HBox>

            <Text text='"Education is the most powerful weapon which you can use to change the world."'
                  style="-fx-font-size: 14px; -fx-text-alignment: center; -fx-fill: white;"/>
        </VBox>
    </AnchorPane>

    <!-- Right Pane (Form) - 50% -->
    <AnchorPane style="-fx-background-color: #f5f5f5;" HBox.hgrow="ALWAYS">
        <StackPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                   AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <VBox alignment="CENTER" spacing="15" maxWidth="400"
                  style="-fx-padding: 30; -fx-background-color: white; -fx-background-radius: 15;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.2, 0, 4);">

                <!-- Title -->
                <Text text="Student Registration"
                      style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-fill: #8c84a1;" />

                <!-- Full Name -->
                <VBox spacing="5" maxWidth="300">
                    <Label text="Full Name" style="-fx-font-size: 14px; -fx-text-fill: #666;" />
                    <TextField fx:id="nameField" promptText="Enter your name" accessibleText="Full Name"
                               style="-fx-pref-width: 300px; -fx-pref-height: 40px; -fx-font-size: 14px;
                                      -fx-background-radius: 10px; -fx-border-radius: 10px; -fx-border-color: #EEA0FF;"/>
                </VBox>

                <!-- Email -->
                <VBox spacing="5" maxWidth="300">
                    <Label text="Email" style="-fx-font-size: 14px; -fx-text-fill: #666;" />
                    <TextField fx:id="emailField" promptText="Enter your email" accessibleText="Email"
                               style="-fx-pref-width: 300px; -fx-pref-height: 40px; -fx-font-size: 14px;
                                      -fx-background-radius: 10px; -fx-border-radius: 10px; -fx-border-color: #EEA0FF;"/>
                </VBox>

                <!-- Password -->
                <VBox spacing="5" maxWidth="300">
                    <Label text="Password" style="-fx-font-size: 14px; -fx-text-fill: #666;" />
                    <PasswordField fx:id="passwordField" promptText="Enter password" accessibleText="Password"
                                   style="-fx-pref-width: 300px; -fx-pref-height: 40px; -fx-font-size: 14px;
                                          -fx-background-radius: 10px; -fx-border-radius: 10px; -fx-border-color: #EEA0FF;"/>
                </VBox>

                <!-- Confirm Password -->
                <VBox spacing="5" maxWidth="300">
                    <Label text="Confirm Password" style="-fx-font-size: 14px; -fx-text-fill: #666;" />
                    <PasswordField fx:id="confirmPasswordField" promptText="Confirm password" accessibleText="Confirm Password"
                                   style="-fx-pref-width: 300px; -fx-pref-height: 40px; -fx-font-size: 14px;
                                          -fx-background-radius: 10px; -fx-border-radius: 10px; -fx-border-color: #EEA0FF;"/>
                </VBox>

                <!-- Gender -->
                <VBox spacing="5" maxWidth="300">
                    <Label text="Gender" style="-fx-font-size: 14px; -fx-text-fill: #666;" />
                    <HBox alignment="CENTER_LEFT" spacing="20">
                        <HBox spacing="5">
                            <RadioButton fx:id="maleRadio" toggleGroup="$genderGroup" accessibleText="Male"/>
                            <Label text="Male" style="-fx-font-size: 14px; -fx-text-fill: #666;" />
                        </HBox>
                        <HBox spacing="5">
                            <RadioButton fx:id="femaleRadio" toggleGroup="$genderGroup" accessibleText="Female"/>
                            <Label text="Female" style="-fx-font-size: 14px; -fx-text-fill: #666;" />
                        </HBox>
                    </HBox>
                </VBox>

                <!-- Age -->
                <VBox spacing="5" maxWidth="300">
                    <Label text="Age" style="-fx-font-size: 14px; -fx-text-fill: #666;" />
                    <TextField fx:id="ageField" promptText="Enter your age" accessibleText="Age"
                               style="-fx-pref-width: 300px; -fx-pref-height: 40px; -fx-font-size: 14px;
                                      -fx-background-radius: 10px; -fx-border-radius: 10px; -fx-border-color: #EEA0FF;"/>
                </VBox>

                <!-- Country -->
                <VBox spacing="5" maxWidth="300">
                    <Label text="Country" style="-fx-font-size: 14px; -fx-text-fill: #666;" />
                    <ComboBox fx:id="countryComboBox" promptText="Select your country" accessibleText="Country"
                              style="-fx-pref-width: 300px; -fx-pref-height: 40px; -fx-font-size: 14px;
                                     -fx-background-radius: 10px; -fx-border-radius: 10px; -fx-border-color: #EEA0FF;" />
                </VBox>

                <!-- Error -->
                <Label fx:id="errorLabel" style="-fx-text-fill: red; -fx-font-size: 14px;" />

                <!-- Sign Up -->
                <Button text="Sign Up" defaultButton="true" onAction="#handleSignUp"
                        style="-fx-pref-width: 300px; -fx-pref-height: 40px;
                               -fx-background-color: #8c84a1; -fx-text-fill: white;
                               -fx-font-weight: bold; -fx-font-size: 15px;
                               -fx-background-radius: 20px; -fx-cursor: hand;" />

                <!-- Login -->
                <HBox alignment="CENTER" spacing="5" style="-fx-padding: 10px 0;">
                    <Label text="Already have an account?" style="-fx-font-size: 14px; -fx-text-fill: #666;" />
                    <Hyperlink text="Login" onAction="#handleLoginRedirect"
                               style="-fx-text-fill: #47AEFF; -fx-font-size: 14px;" />
                </HBox>

            </VBox>
        </StackPane>
    </AnchorPane>
</HBox>