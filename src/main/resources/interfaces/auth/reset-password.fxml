<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="resetPassPage" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="534.0" prefWidth="407.0" spacing="50.0" style="-fx-background-color: white;"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tn.esprit.controllers.auth.ResetPasswordController">

    <children>
        <Label prefHeight="63.0" prefWidth="355.0" text="Recover Your Account:" textFill="#6433b9">
            <font>
                <Font name="Arial" size="29.0" />
            </font>
        </Label>

        <VBox>
            <children>
                <HBox>
                    <children>
                        <Label prefHeight="41.0" prefWidth="156.0" text="Email:" textFill="#393939">
                            <font>
                                <Font name="Arial Bold" size="14.0" />
                            </font>
                        </Label>
                        <VBox>
                            <children>
                                <TextField fx:id="emailField" prefHeight="37.0" prefWidth="213.0"
                                           style="-fx-background-color: white; -fx-border-color: #865fc8; -fx-border-width: 0px 0px 2px 0px;" />
                                <Label fx:id="errorLabel" prefHeight="18.0" prefWidth="211.0" textFill="#ff6666">
                                    <font>
                                        <Font size="9.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>

                <HBox alignment="CENTER_RIGHT">
                    <children>
                        <Label fx:id="sendCodeMessage" prefHeight="17.0" prefWidth="259.0" />
                        <Button fx:id="sendBTN" mnemonicParsing="false" onAction="#handleSendCode"
                                prefHeight="29.0" prefWidth="102.0" style="-fx-background-color: #865fc8;"
                                text="Send Code" textFill="WHITE">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>

        <HBox fx:id="verificationBox" alignment="CENTER" prefHeight="122.0" prefWidth="367.0" spacing="20.0">
            <children>
                <TextField fx:id="digit1" alignment="CENTER" prefHeight="65.0" prefWidth="59.0"
                           style="-fx-border-radius: 10px; -fx-border-width: 1px; -fx-border-color: #5c24a1; -fx-background-color: #e5ddf3;">
                    <font>
                        <Font name="Arial Bold" size="26.0" />
                    </font>
                </TextField>
                <TextField fx:id="digit2" alignment="CENTER" prefHeight="65.0" prefWidth="59.0"
                           style="-fx-border-radius: 10px; -fx-border-width: 1px; -fx-border-color: #5c24a1; -fx-background-color: #e5ddf3;">
                    <font>
                        <Font name="Arial Bold" size="26.0" />
                    </font>
                </TextField>
                <TextField fx:id="digit3" alignment="CENTER" prefHeight="66.0" prefWidth="59.0"
                           style="-fx-border-radius: 10px; -fx-border-width: 1px; -fx-border-color: #5c24a1; -fx-background-color: #e5ddf3;">
                    <font>
                        <Font name="Arial Bold" size="26.0" />
                    </font>
                </TextField>
                <TextField fx:id="digit4" alignment="CENTER" prefHeight="65.0" prefWidth="59.0"
                           style="-fx-border-radius: 10px; -fx-border-width: 1px; -fx-border-color: #5c24a1; -fx-background-color: #e5ddf3;">
                    <font>
                        <Font name="Arial Bold" size="26.0" />
                    </font>
                </TextField>
                <TextField fx:id="digit5" alignment="CENTER" prefHeight="65.0" prefWidth="59.0"
                           style="-fx-border-radius: 10px; -fx-border-width: 1px; -fx-border-color: #5c24a1; -fx-background-color: #e5ddf3;">
                    <font>
                        <Font name="Arial Bold" size="26.0" />
                    </font>
                </TextField>
            </children>
        </HBox>

        <HBox alignment="CENTER_LEFT" prefHeight="120.0" prefWidth="367.0" spacing="30.0">
            <children>
                <Button fx:id="verifyBtn" mnemonicParsing="false" onAction="#handleVerifyCode"
                        prefHeight="29.0" prefWidth="102.0" style="-fx-background-color: #865fc8;"
                        text="Verify Code" textFill="WHITE">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Button>
                <Hyperlink fx:id="backLogin" onAction="#handleBackToLogin" prefHeight="24.0" prefWidth="92.0"
                           text="Back to Login" textFill="#865fc8" underline="true" />
            </children>
        </HBox>
    </children>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>