<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.ModifierAnnonceController"
      spacing="10"
      style="-fx-padding: 20;">

    <Label text="Modifier l'annonce" style="-fx-font-size: 16; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Titre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="titreField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextArea fx:id="descriptionArea" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10">
        <Button text="Enregistrer" fx:id="saveButton" onAction="#handleSave"/>
        <Button text="Annuler" fx:id="cancelButton" onAction="#handleCancel"/>
    </HBox>
</VBox>